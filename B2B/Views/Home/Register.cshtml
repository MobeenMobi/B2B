@{
	Layout = null;
}
<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<title>Register</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light d-flex align-items-center justify-content-center vh-100">
	<div class="card p-4 shadow w-50" style="background-color:#89CFF0; color:white" >
		<h4 class="text-center mb-4">Register</h4>
		<ul class="nav nav-pills mb-3 justify-content-center" id="pills-tab" role="tablist">
			<li class="nav-item" role="presentation">
				<button class="nav-link active" id="step1-tab" data-bs-toggle="pill" data-bs-target="#step1" type="button" role="tab">● Company</button>
			</li>
			<li class="nav-item" role="presentation">
				<button class="nav-link" id="step2-tab" data-bs-toggle="pill" data-bs-target="#step2" type="button" role="tab">● Bank</button>
			</li>
			<li class="nav-item" role="presentation">
				<button class="nav-link" id="step3-tab" data-bs-toggle="pill" data-bs-target="#step3" type="button" role="tab">● Approver</button>
			</li>
		</ul>
		<form method="post" action="/Account/Register">
			<div class="tab-content" id="pills-tabContent">
				<div class="tab-pane fade show active" id="step1" role="tabpanel">
					<div class="mb-3"><label>Company Name</label><input class="form-control" name="CompanyName" required /></div>
					<div class="mb-3"><label>Company Address</label><input class="form-control" name="CompanyAddress" required /></div>
					<button class="btn btn-primary w-100" type="button" onclick="nextStep(2)">Next</button>
				</div>
				<div class="tab-pane fade" id="step2" role="tabpanel">
					<div class="mb-3"><label>Bank Name</label><input class="form-control" name="BankName" required /></div>
					<div class="mb-3"><label>Account Number</label><input class="form-control" name="AccountNumber" required /></div>
					<button class="btn btn-secondary w-100 mb-2" type="button" onclick="nextStep(1)">Back</button>
					<button class="btn btn-primary w-100" type="button" onclick="nextStep(3)">Next</button>
				</div>
				<div class="tab-pane fade" id="step3" role="tabpanel">
					<div class="mb-3"><label>Approver Name</label><input class="form-control" name="ApproverName" required /></div>
					<div class="mb-3"><label>Approver Email</label><input class="form-control" name="ApproverEmail" required /></div>
					<button class="btn btn-secondary w-100 mb-2" type="button" onclick="nextStep(2)">Back</button>
					<button class="btn btn-success w-100" type="submit">Submit</button>
				</div>
			</div>
		</form>
	</div>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
	<script>
		function nextStep(step) {
		var tabTrigger = new bootstrap.Tab(document.querySelector('#step' + step + '-tab'));
		tabTrigger.show();
		}
	</script>
</body>
</html>