@inject Microsoft.AspNetCore.Http.IHttpContextAccessor HttpContextAccessor

@{
    var userName = HttpContextAccessor.HttpContext.Session.GetString("UserName") ?? "";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /* Sidebar styling */
        .sidebar {
            width: 250px;
            min-height: 100vh;
            background: #89CFF0;
            color: #fff;
        }

            .sidebar a {
                color: #fff;
                text-decoration: none;
            }

            .sidebar .nav-link {
                padding: 0.6rem 1rem;
            }

        .chev {
            transition: transform .2s ease;
        }

            .chev.rotate {
                transform: rotate(180deg);
            }
    </style>
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- HEADER -->
    <header class="bg-light border-bottom py-2 px-3 d-flex justify-content-between align-items-center">
        <div></div>
        <div>
            Logged in as: <strong>@userName</strong> |
            <a href="/Login/Logout" class="text-decoration-none">Logout</a>
        </div>
    </header>

    <!-- MAIN CONTENT WRAPPER (horizontal flex) -->
    <div class="d-flex flex-grow-1">
        <!-- SIDEBAR -->
        <nav class="sidebar d-flex flex-column p-2">
            <h5 class="px-2 text-center">B2B</h5>
            <ul class="nav nav-pills flex-column mb-auto">
                <li class="nav-item">
                    <a class="nav-link" href="/Home/Dashboard">Dashboard</a>
                </li>

                <li>
                    <a class="nav-link d-flex justify-content-between align-items-center"
                       data-bs-toggle="collapse"
                       href="#collapseProducts"
                       role="button"
                       aria-expanded="false"
                       aria-controls="collapseProducts">
                        Products
                        <span class="chev">▾</span>
                    </a>
                    <div class="collapse" id="collapseProducts">
                        <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                            <li><a href="#" class="nav-link ps-4">All Products</a></li>
                            <li><a href="#" class="nav-link ps-4">Add Product</a></li>
                            <li><a href="#" class="nav-link ps-4">Categories</a></li>
                        </ul>
                    </div>
                </li>

                <li>
                    <a class="nav-link d-flex justify-content-between align-items-center"
                       data-bs-toggle="collapse"
                       href="#collapseUsers"
                       role="button"
                       aria-expanded="false"
                       aria-controls="collapseUsers">
                        Users
                        <span class="chev">▾</span>
                    </a>
                    <div class="collapse" id="collapseUsers">
                        <ul class="btn-toggle-nav list-unstyled fw-normal pb-1 small">
                            <li><a href="/Users/UsersList" class="nav-link ps-4">Users</a></li>
                            <li><a href="#" class="nav-link ps-4">Roles</a></li>
                        </ul>
                    </div>
                </li>

                <li class="nav-item mt-auto">
                    <a class="nav-link" href="#">Currency Exchange</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Transaction History</a>
                </li>
            </ul>
        </nav>

        <!-- MAIN CONTENT AREA -->
        <main class="flex-grow-1 p-4">
            @if (!IsSectionDefined("PageContent"))
            {
                @RenderBody()
            }
            else
            {
                @RenderSection("PageContent")
            }
        </main>
    </div>

    <!-- FOOTER -->
    <footer class="bg-light border-top text-center py-2 mt-auto">
        <small>&copy; 2025 - All Rights Reserved.</small>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        document.querySelectorAll('[data-bs-toggle="collapse"]').forEach(btn => {
            const target = document.querySelector(btn.getAttribute('href'));
            const chev = btn.querySelector('.chev');
            if (target && chev) {
                target.addEventListener('shown.bs.collapse', () => chev.classList.add('rotate'));
                target.addEventListener('hidden.bs.collapse', () => chev.classList.remove('rotate'));
            }
        });
    </script>

    @RenderSection("Scripts", required: false)
</body>
</html>
