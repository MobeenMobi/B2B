@model B2B.Models.OTRUsers
@{
    ViewBag.Title = "Add New OTR User";
}

<h2>Add OTR User</h2>

<div class="container">
    <div class="card">
        <div class="card-header bg-primary text-white">
            OTR User Details
        </div>
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="row mb-3">
                    <div class="col-md-3">
                        <label asp-for="FirstName" class="form-label"></label>
                        <input asp-for="FirstName" class="form-control" required />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="MiddleName" class="form-label"></label>
                        <input asp-for="MiddleName" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="LastName" class="form-label"></label>
                        <input asp-for="LastName" class="form-control" required />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="IDType" class="form-label"></label>
                        <input asp-for="IDType" class="form-control" required />
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-3">
                        <label asp-for="IDNumber" class="form-label"></label>
                        <input asp-for="IDNumber" class="form-control" required />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="PhoneNumber" class="form-label"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                    </div>
                    <div class="col-md-3">
                        <label asp-for="RoleId" class="form-label">Role</label>
                        <select asp-for="RoleId" class="form-select" asp-items="ViewBag.Roles">
                            <option value="">-- Select Role --</option>
                        </select>
                    </div>
                </div>

                <button type="submit" class="btn btn-success">Save</button>
                <a asp-action="Index" class="btn btn-secondary">Cancel</a>
            </form>
        </div>
    </div>
</div>

